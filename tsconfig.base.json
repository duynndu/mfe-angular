{
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": ".",
    "paths": {
      "shared/helpers": ["projects/shared/helpers"],
      "shared/types": ["projects/shared/types"],
      "shared/utils": ["projects/shared/utils"],
      "shared/constants": ["projects/shared/constants"]
    },
  },
}
